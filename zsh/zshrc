# Exports
export PATH="$HOME/scripts:$PATH"
export PATH="$HOME/.poetry/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="$PATH:/usr/local/go/bin"
export ZSH="$HOME/.oh-my-zsh"
export EDITOR="nvim"
export LS_COLORS="$(vivid generate snazzy)"

ZSH_THEME="eastwood"

# Update reminder
zstyle ':omz:update' mode reminder  # just remind me to update when it's time

DISABLE_AUTO_TITLE="false"

source ~/.zsh/catppuccin_mocha-zsh-syntax-highlighting.zsh
plugins=(git python zsh-autosuggestions zsh-syntax-highlighting)

# History settings
HISTFILE=~/.histfile
HISTSIZE=1000000
SAVEHIST=1000000

# Disable beep on error
unsetopt beep
unsetopt nomatch

bindkey -v

# Aliases
alias \
    cp='cp -iv' \
    mv='mv -iv' \
    rm='rm -Iv'

alias \
    ls='ls -hN --color=auto --group-directories-first' \
    grep='grep --color=auto' \
    diff='diff --color=auto' \
    fgrep='fgrep --color=auto' \
    egrep='egrep --color=auto'

alias \
    upd='sudo apt update && sudo apt upgrade -y && sudo apt dist-upgrade && sudo apt autoremove -y' \
    cl='clear' \
    cls='clear' \
    ytmp4='yt-dlp -f bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best' \
    ytflac='yt-dlp --extract-audio --audio-format flac' \
    ytwebm='yt-dlp -f "bv*[height<=720]+ba/b[height<=720] / wv*+ba/w"' \
    ytplflac='yt-dlp -f "bestaudio/best" -ciw -o "%(title)s.%(ext)s" --extract-audio --audio-format flac --yes-playlist' \
    nb='newsboat' \
    e='$EDITOR' \
    v='nvim' \
    c='code'

# Autocompletion menu
zstyle ':completion:*' menu yes select
# Boost performance
ZSH_AUTOSUGGEST_MANUAL_REBIND=1
DISABLE_UNTRACKED_FILES_DIRTY="true"

source $ZSH/oh-my-zsh.sh

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/h4wk/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/h4wk/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/h4wk/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/h4wk/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

